#version 430

layout(local_size_x = WORK_GROUP_COUNT) in;

layout(push_constant) uniform pc {
  uint thread_count;
};

layout(binding = 0) buffer myinputs {
  uint words[];
};

void main() {
  uint thread_id = gl_GlobalInvocationID.x;
  if (thread_id >= thread_count) return;
  words[thread_id] *= words[thread_id];
}
